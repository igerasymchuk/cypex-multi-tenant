{
  "name": "auth-api",
  "version": "1.0.0",
  "description": "Authentication service for CYPEX multi-tenant demo",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "pgtyped": "pgtyped -c pgtyped.config.json",
    "pgtyped:watch": "pgtyped -c pgtyped.config.json --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@pgtyped/runtime": "^2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.11.3",
    "swagger-ui-express": "^5.0.1",
    "typedi": "^0.10.0",
    "zod": "^3.25.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@pgtyped/cli": "^2.3.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "openapi-types": "^12.1.3",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
